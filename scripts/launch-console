#!/usr/bin/env bash
# baked console wrapper
# DEV  -> rsync /project/scripts -> /scripts ; exec /scripts/org-launch-console
# PROD -> exec /usr/local/libexec/org/org-launch-console
set -Eeuo pipefail

MODE="${BUILD_MODE:-development}"

if [[ "$MODE" == "development" ]]; then
  if command -v org-sync-scripts.sh >/dev/null 2>&1; then
    org-sync-scripts.sh || true
  fi
  target="/scripts/org-launch-console"
else
  target="/usr/local/libexec/org/org-launch-console"
fi

if [[ ! -x "$target" ]]; then
  echo "org(launch-console): launcher not found or not executable: $target" >&2
  echo "mode=$MODE  (set BUILD_MODE=development to pull from /project/scripts)" >&2
  exit 127
fi

exec "$target" "$@"
