#!/usr/bin/env bash
# ./org  (wrapper)
# Ensures we always start a single container with the repo mounted at /project.

set -euo pipefail

IMAGE="${IMAGE:-localhost/org-build:debian-12}"

# Repo root (prefer git toplevel; else cwd)
REPO_ROOT="$(git rev-parse --show-toplevel 2>/dev/null || pwd)"

# Subdir relative to the repo root for ORG_DEFAULT_CWD
CWD_SUB="$(
python3 - <<'PY' "$REPO_ROOT" "$PWD"
import os, sys
root=os.path.realpath(sys.argv[1])
cwd =os.path.realpath(sys.argv[2])
print(os.path.relpath(cwd, root) if cwd.startswith(root+os.sep) else "")
PY
)"

ORG_DEFAULT_CWD="/work${CWD_SUB:+/$CWD_SUB}"

echo "[host] repo   = ${REPO_ROOT}"
echo "[host] subdir = ${CWD_SUB:-<root>}"
echo "[host] ORG_DEFAULT_CWD = ${ORG_DEFAULT_CWD}"

# Keep a place for run artifacts if you want to persist them on host
mkdir -p "${REPO_ROOT}/.org"

# Single-container run; call entrypoint and forward args to the app (org "$@")
exec podman run --rm -it \
  -v "${REPO_ROOT}:/project:ro,Z" \
  -v "${REPO_ROOT}/.org:/hostrun:rw,Z" \
  -e ORG_DEFAULT_CWD="${ORG_DEFAULT_CWD}" \
  -w /work \
  "${IMAGE}" \
  /usr/local/bin/org-entrypoint org "$@"
