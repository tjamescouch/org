# Host-side sandbox policy for org

# Engine/image
ORG_ENGINE=podman
ORG_IMAGE=localhost/org-build:debian-12
ORG_CONTAINERFILE=Containerfile

# Container restrictions
ORG_NETWORK=none
ORG_CAPS=all
ORG_USERNS=keep-id

# File policy (colon-separated globs)
ORG_ALLOW="*:**/*"
ORG_DENY=".git/**:.org/**:.env:.github/**:**/*.pem:**/*.key"
